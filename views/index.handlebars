<div class="jumbotron jumbotron-fluid">
  <div class="container">

    <p class="lead">Which Burger would you like to Devour?</p>


    <form class="create-form">


      <div class="form-group">
        <label for="newBurg">Enter Burger Here:</label>
        <input type="text" id="newBurg" name="burger">
      </div>



      <button type="submit" class="btn btn-warning">Add Burger</button>
    </form>


  </div>
</div>



<div class="container">
  <div class="row">
    <div class="col">




      <div class="card">
  <div class="card-body">
    



<p>Burgers that have not been devoured!</p>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}

        <li>

          {{this.burger}}
          <button class="burgereat" data-id="{{this.id}}" data-newBurger="{{devoured}}">

            Devour!
          </button>

        </li>

        {{/unless}}
        {{/each}}
      </ul>
    </div>






  </div>
</div>






<div class="col">

     <div class="card">
    <div class="card-body">




      <p>Burgers that have been Devoured!</p>

      <ul>
        {{#each burgers}}
        {{#if devoured}}

        <li>
          {{this.burger}}
      </li>

          <button class="burgereaten" data-id="{{this.id}}">

            Trash!
          </button>


        {{/if}}
        {{/each}}
      </ul>
        </div>
  </div>





  </div>
</div>






